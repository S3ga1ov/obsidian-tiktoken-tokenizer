{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "es2020"
    ]
  },
  "include": [
    "**/*.ts",
    "typings.d.ts"
  ]
}
